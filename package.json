{
    "name": "node-red-function-sync",
    "version": "1.0.4",
    "description": "Tooling for developing Node-RED function nodes locally using standard JavaScript workflows.",
    "author": "Kris Van de Steeg",
    "license": "MIT",
    "main": "dist/index.cjs.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs.js",
            "default": "./dist/index.cjs.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist"
    ],
    "bin": {
        "nr-extract": "./dist/extract.js",
        "nr-sync": "./dist/sync.js"
    },
    "keywords": [
        "node-red",
        "developer-tools",
        "local-dev"
    ],
    "scripts": {
        "build": "tsup src/*.ts --format cjs,esm --dts --out-dir dist",
        "build:watch": "tsup --watch src/*.ts --format cjs,esm --dts --out-dir dist",
        "test": "tsx --test src/*.spec.ts",
        "prepare": "npm run build",
        "prepublishOnly": "npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kwv/node-red-function-sync.git"
    },
    "bugs": {
        "url": "https://github.com/kwv/node-red-function-sync/issues"
    },
    "homepage": "https://github.com/kwv/node-red-function-sync#readme",
    "devDependencies": {
        "@types/node": "^25.0.3",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}